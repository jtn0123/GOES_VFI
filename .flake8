[flake8]
# Ignore common issues that would require extensive refactoring
ignore =
    # Indentation issues
    E114,E116,E117,
    # Line length
    E501,
    # Line breaks
    E131,E203,W503,
    # Complexity
    C901,
    # Docstring issues
    D100,D101,D102,D103,D104,D105,D106,D107,D200,D201,D202,D203,D204,D205,D400,D401,D402,D403,D404,D405,D406,D407,D408,D409,D410,D411,D412,D413,D414,D415,D416,D417,
    # Quote style
    Q000,
    # Other minor issues
    E261,B907,F821,F841,F811

# Exclude test files and auto-generated code
exclude =
    .git,
    __pycache__,
    .venv,
    .env,
    build,
    dist,
    tests,
    examples,
    legacy_tests,
    *.bak,
    *.egg-info,
    .pytest_cache

max-line-length = 88
